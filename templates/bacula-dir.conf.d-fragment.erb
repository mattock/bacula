Job {
  Name = "Backup <%= @fqdn %>"
  Type = Backup
  Level = Incremental
  FileSet="Locally defined files at <%= @fqdn %>"
  Schedule = <%= @schedule_name %>
  Storage = File
  Messages = <%= @messages %>
  Pool = File
  Priority = 10
  Write Bootstrap = "/var/lib/bacula/%c.bsr"
  Client = <%= @fqdn %>-fd
}

Job {
  Name = "Restore <%= @fqdn %>"
  Type = Restore
  Client=<%= @fqdn %>-fd
  FileSet="Locally defined files at <%= @fqdn %>"
  Storage = File
  Pool = File
  Messages = <%= @messages %>
  Where = /var/restore/bacula/<%= @fqdn %>
}

Schedule {
    # The "schedule_name" variable can't be used here, as "Name" must be unique
    Name = "<%= @fqdn %>-schedule"
<% if @schedules %><% @schedules.each do |entry| -%>
    Run = <%= entry %>
<% end -%>
<% end -%>
}

# List of files to be backed up
FileSet {
  Name = "Locally defined files at <%= @fqdn %>"
  Include {
    Options {
      signature = SHA1
      compression = GZIP
    }

    <% @backup_files.each do |backup_file| -%>
    File = <%= backup_file %>
    <% end -%>
  }<% if @exclude_files %>
    Exclude {
    <% @exclude_files.each do |exclude_file| -%>
    File = "<%= exclude_file %>"
    <% end -%>  
    }<% end %>
}

Client {
  Name = <%= @fqdn %>-fd
  Address = <%= @fqdn %>
  FDPort = 9102
  Catalog = MyCatalog
  Password = "<%= @pwd_for_director %>"    # password for FileDaemon
  File Retention = 30 days            # 30 days
  Job Retention = 6 months            # six months
  AutoPrune = yes                     # Prune expired Jobs/Files

  <% if @tls_enable == "yes" %>
  TLS Enable = yes
  TLS Require = yes

  TLS Certificate = /etc/bacula/ssl/bacula.crt
  TLS Key = /etc/bacula/ssl/bacula.key
  TLS CA Certificate File = /etc/bacula/ssl/bacula-ca.crt
  <% end %>
}
